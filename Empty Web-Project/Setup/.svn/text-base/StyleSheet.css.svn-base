

a {
	color:coral;
	display:inline-block;
}

.errorblock
{
	display:block;
	width:800px;
	border:4px solid #E7e7e7;
	background-color:#f8f8f8;
	padding:15px;	
	margin:0 auto 10px auto;
	position:relative;	
	color:#000;
}

.errorblock .errortitle 
{
	padding-left:40px;
	background-image:url("Images/error.gif");
	background-repeat:no-repeat;
	font-weight: bold;
	font-size: large;
	display: block;
	padding-bottom: 10px;
	margin-bottom: 10px;
	border-bottom:1px solid #e7e7e7;
}



.block
{
	display:block;
	width:800px;
	border:4px solid #E7e7e7;
	background-color:white;
	padding:15px;	
	margin:0 auto 10px auto;
	position:relative;
		font-size: 12px;
}

.block .title {
	font-weight: bold;
	font-size: 12px;
	display: block;
	border-bottom: 1px solid gray;
	padding-bottom: 5px;
	margin-bottom: 5px;
	color: red;
}

.block .compleatetitle {
	padding-left:40px;
	background-image:url("Images/ok.gif");
	background-repeat:no-repeat;
	padding-bottom: 10px;
}

.block .steptitle {
	font-weight: bold;
	font-size: 14px;
	display: block;
	padding-bottom: 10px;
	color: #248cbe;
	padding-left:40px;
	background-image:url("Images/step.gif");
	background-repeat:no-repeat;
}

.block .errortitle {
	float:left;
	font-weight: bold;
	font-size: 14px;
	display: block;
	padding:5px 20px 20px 0px;
	color: #F88D07;
	padding-left:40px;
	background-image:url("Images/ERROR.gif");
	background-repeat:no-repeat;
	background-position:top left;
}

.errorlabel
{
	color:#ff2222;
	display:block;

}
.successlabel {
	color: #99ff33;
	border: 3px solid #99ff33;
	padding: 5px;
	display: block;
}

.line{
	border:1px solid gray;
	padding:2px;
	background-color:whitesmoke;
	margin-bottom:2px;
}

.line .input{
	border:1px solid gray;
	font-size:10pt;
	padding:1px;
	font-weight:bold;
	font-family:Arial;
	height:18px;
	width:250px;
	vertical-align:middle;
}

.line .label{
	width:200px;
	display:block;
	float:left;
	font-weight:bold;
	font-size:10pt;
	padding:1px;
}
.line .checkbox{
	font-size:10pt;
	padding:2px;
	font-weight:bold;
	font-family:Arial;
	height:18px;
	vertical-align:middle;
	display:block;
	margin:0;
}

.toptitle{
	position:absolute;
	right:0;
	bottom:auto;
	top:auto;
	padding:15px;
	font-weight:bold;
	font-size:12pt;
}

.toptitle .setuptitle
{
	color:#248cbe;
	display:block;
	margin-top:5px;
	padding-top:5px;
	font-size:10px;
	border-top:1px solid gray;
}

.setuptype{
	text-align:center;
}

.setuptype a{
	border:5px solid #f0f0f0;
}

.setuptype a:hover{
	border:5px solid #666666;
}

.setuptype img:hover
{
	border:3px solid #999999;	
}

.setuptype img{
	border:3px solid #e7e7e7;
}

.linkbutton{
	text-decoration:none;
	background-color:#f4f4f4;
	color:#666;
	font-weight:bold;
	padding:6px 8px;
	display:inline-block;
	border:2px solid #e7e7e7;
	text-align:center;
	vertical-align:middle;
	font-size:14px;
}

.blockbutton
{
	display:block !important;
	text-align:center !important;
}

.linkbutton:hover{
	background-color:#f8f8f8;
	color:#666666;
}

